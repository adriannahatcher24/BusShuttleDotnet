@model WebMvc.Models.BusCreateModel
@{
    ViewData["Title"] = "Create Bus";
}
<h2>Create Bus</h2>
<a asp-action="BusView">Back to List</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BusCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
