@model WebMvc.Models.DriverCreateModel
@{
    ViewData["Title"] = "Create Driver";
}
<h2>Create Driver</h2>
<a asp-action="DriverView">Back to List</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Users</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.AvailableUsers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
