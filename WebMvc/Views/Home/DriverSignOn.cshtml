@model WebMvc.Models.DriverSignOnModel

@{
    ViewData["Title"] = "DriverSignOn";
}

<h1>Sign On</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverSignOn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label">Bus</label>
                <select asp-for="BusId" class="form-control" asp-items="ViewBag.AvailableBusses"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoopId" class="control-label">Loop</label>
                <select asp-for="LoopId" class="form-control" asp-items="ViewBag.AvailableLoops"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
