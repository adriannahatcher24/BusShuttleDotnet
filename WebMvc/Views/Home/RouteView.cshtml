@model IEnumerable<WebMvc.Models.RouteViewModel>
@{
    ViewData["Title"] = "Route List";
}
<h2>Route List</h2>
<a asp-action="HomeView" class="btn">Back to List</a>
<a asp-action="RouteCreate" class="btn">Create a new Route</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoopName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StopName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoopName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StopName)
                </td>
                <td>
                    <a asp-action="RouteEdit" asp-route-id="@item.Id">Edit</a> | <form asp-action="RouteDelete"
                        asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

<style>
        .table{
        font-size: 30px;
    }
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        font-size: 25px;
    }
    
    .btn:hover {
        background-color: #0056b3;
    }
</style>
