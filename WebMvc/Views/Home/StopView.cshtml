@model IEnumerable<WebMvc.Models.StopViewModel>
@{
    ViewData["Title"] = "Stop List";
}
<h1>Stop List</h1>
<a asp-action="HomeView" class="btn">Back to List</a>
<a asp-action="StopCreate" class="btn">Create a new Stop</a>
<div class="container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    <a asp-action="StopEdit" asp-route-id="@item.Id">Edit</a> | <form asp-action="StopDelete"
                        asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>

<style>
        .table{
        font-size: 30px;
    }
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        font-size: 25px;
    }
    
    .btn:hover {
        background-color: #0056b3;
    }
</style>
